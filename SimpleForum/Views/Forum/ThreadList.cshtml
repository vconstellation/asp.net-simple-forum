@model IEnumerable<SimpleForum.Models.ForumThread>

@{
    ViewData["Title"] = "Index";
    var categoryId = ViewData["catId"];
}

<h1>Thread</h1>

<p>
    <a asp-action="CreateThread" asp-route-id="@categoryId">Create New</a>
    <ul>
        <a>@categoryId</a>
    </ul>
</p>

<p>
    <a asp-action="Index">Categories</a>
</p>


@if(Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Thread Name
                </th>
                <th>
                    No. of Posts
                </th>
                <th>
                    Latest
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="forum" asp-action="PostList" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ThreadTitle)</a>
                    </td>
                    <td>
                        if (@item.Posts.Any()) 
                        {                            
                            <a>5</a>
                        }
                        else
                        {                            
                            <a>0</a>
                        }
                        
                    </td>
                </tr>
            }
            <a></a>
        </tbody>
    </table>
}